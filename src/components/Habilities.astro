---
import HabilitiesIcon from '../icons/HabilitiesIcon.astro'

const { lang, habilities } = Astro.props

const { skills } = lang
const { aptitudes, programation, languages } = habilities
---

<section class="mt-10">
    <header>
        <h3
            class="font-bold text-2xl text-indigo-400 flex flex-row items-center gap-2"
        >
            {skills.title}
            <HabilitiesIcon />
        </h3>
    </header>
    <div class="ml-6 mt-4">
        <h4 class="font-semibold text-xl text-indigo-400">
            {skills.aptidudes}
        </h4>
        <ul
            class="grid grid-cols-2 gap-x-5 list-disc ml-12 mt-4 sm:grid-cols-3"
        >
            {
                aptitudes.map((aptitude) => (
                    <li class="font-medium text-lg text-gray-400">
                        {aptitude}
                    </li>
                ))
            }
        </ul>

        <h4 class="font-semibold text-xl text-indigo-400 mt-4">
            {skills.programation}
        </h4>
        <ul
            class="grid grid-cols-2 gap-x-5 list-disc ml-12 mt-4 sm:grid-cols-3"
        >
            {
                programation.map((progra) => (
                    <li class="font-medium text-lg text-gray-400">{progra}</li>
                ))
            }
        </ul>

        <h4 class="font-semibold text-xl text-indigo-400 mt-4">
            {skills.Languages}
        </h4>
        <ul class="grid grid-cols-3 list-disc ml-12 mt-4 whitespace-nowrap">
            {
                languages.map((lang) => (
                    <li class="font-medium text-lg text-gray-400">{lang}</li>
                ))
            }
        </ul>
    </div>
</section>
